<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_screen"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <Spinner
        android:id="@+id/spinner_elect_course"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@android:drawable/btn_dropdown"
        android:gravity="center|end"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/spinner_elect_year"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:drawable/btn_dropdown"
        android:gravity="center|end"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/spinner_elect_branch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:drawable/btn_dropdown"
        android:gravity="center|end"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/spinner_elect_subcode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:drawable/btn_dropdown"
        android:gravity="center|end"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/spinner_elect_unit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:drawable/btn_dropdown"
        android:gravity="center|end"
        android:textSize="25sp" />

    <Button
        android:id="@+id/electbtngo"
        android:layout_width="176dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/go" />
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>